{
  "name": "base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "env-var": "cross-env BASE_PATH=/universal-react",
    "dev": "next dev",
    "build": "next build",
    "build:prod": "npm run env-var && npm run build",
    "start": "next start dev",
    "export": "next export",
    "test:watch": "npm run test -- --watch",
    "test": "jest -c ./config/jest/jest.config.js",
    "generate": "plop --plopfile generators/index.js && npm run pretty-quick",
    "bundlesize": "bundlesize --config ./config/bundlesize.json",
    "analyze": "cross-env ANALYZE=true next build",
    "perf": "docker-compose -f ./config/performance/sitespeed-compose.yml run sitespeed.io  --config sitespeed.config.json --budget.configPath sitespeed.budget.config.json --graphite.host=graphite urls.txt",
    "pretty-quick": "pretty-quick"
  },
  "browserslist": [
    "> 0.25%",
    "not ie <= 11",
    "not edge < 15",
    "not op_mini all",
    "not dead"
  ],
  "dependencies": {
    "@mdx-js/react": "^1.6.22",
    "cross-env": "^7.0.2",
    "express": "4.17.1",
    "helmet": "4.6.0",
    "markdown-to-jsx": "^7.1.3",
    "next": "*",
    "react": "*",
    "react-dom": "*",
    "styled-jsx": "4.0.1",
    "styled-components": "^5.3.1",
    "themes": "*"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "11.1.2",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/preset-typescript": "^7.16.7",
    "@types/node": "^17.0.11",
    "@types/react": "^17.0.38",
    "@types/styled-components": "^5.1.21",
    "bundlesize": "0.18.1",
    "cross-env": "7.0.3",
    "plop": "2.7.4",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "typescript": "4.5.5"
  }
}
