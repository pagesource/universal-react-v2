{
  "name": "universal-react-v2",
  "version": "2.0.0",
  "description": "Universal React App Generator",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "universal-react-v2": "index.js"
  },
  "repository": "/universal-react/",
  "author": {
    "name": "PageSource",
    "email": "",
    "url": "https://github.com/pagesource"
  },
  "engines": {
    "node": "12"
  },
  "scripts": {
    "lint": "node scripts/eslint",
    "lint:fix": "npm run lint -- --fix",
    "test": "node scripts/test",
    "prepublishOnly": "npm run lint && npm test",
    "cm": "npx git-cz",
    "cm:retry": "npx git-cz --retry"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "react-app-generator",
    "react-universal"
  ],
  "dependencies": {
    "chalk": "4.0.0",
    "copy-dir": "^1.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "inquirer": "7.1.0",
    "lint-staged": "10.1.2",
    "ora": "4.0.3",
    "prettier": "2.0.4",
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "mocha": "*",
    "npm": "^6.14.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "git-cz",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "",
      "defaultScope": "",
      "defaultSubject": "",
      "defaultBody": "",
      "defaultIssues": ""
    }
  }
}
